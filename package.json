{
  "name": "clarity-react",
  "version": "0.1.0",
  "description": "React components for Clarity UI",
  "license": "Apache-2.0",
  "private": true,
  "outDir": "dist",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@clr/icons": "2.0.0-beta.1",
    "@clr/ui": "2.2.0",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.9.5",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@webcomponents/custom-elements": "1.2.4",
    "moment": "^2.24.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-uid": "^2.2.0",
    "typescript": "^3.3.3333"
  },
  "repository": {
    "type": "http",
    "url": "https://github.com:ben-schumacher/clr-react.git"
  },
  "scripts": {
    "build": "tsc",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "testWithCoverage": "jest --coverage",
    "test": "jest",
    "lint": "./node_modules/.bin/eslint **//*.tsx",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@sambego/storybook-state": "^1.3.4",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-info": "^5.0.1",
    "@storybook/addon-links": "^5.0.1",
    "@storybook/addons": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "@types/enzyme": "^3.9.0",
    "@types/storybook__react": "^4.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-root-import": "^6.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "5.12.0",
    "eslint-config-prettier": "^4.0.0",
    "expect": "latest",
    "husky": "^2.4.1",
    "jest": "^24.5.0",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.16.4",
    "react-docgen-typescript-loader": "^3.0.1",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "ts-jest": "^24.0.0"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/testResolver.tsx",
      "\\.(css|less)$": "<rootDir>/testResolver.tsx"
    },
    "setupFiles": [
      "<rootDir>/testSetup.tsx"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "snapshotResolver": "<rootDir>/testResolver.tsx",
    "testEnvironment": "jest-environment-jsdom-fourteen"
  }
}
